.row
  .login-panel.col-md-4.col-md-offset-4.panel
    - if params[:feature]
      %h2 
        = t('devise.sign_up.title_with_feature')
    - else
      %h2 
        = t('devise.sign_up.title')
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        = f.email_field :email, autofocus: true
      .field
        = f.label :password, t('devise.password.title')
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} #{t('devise.characters_minimum')})
        = f.password_field :password, autocomplete: "off"
      .field
        = f.label :password_confirmation, t('devise.password_confirmation.title')
        = f.password_field :password_confirmation, autocomplete: "off"
      .actions
        = f.submit t('devise.sign_up.submit'), class: "btn btn-danger"
    = render "devise/shared/links"
